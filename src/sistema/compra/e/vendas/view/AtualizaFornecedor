    private void btnBuscarActionPerformed(java.awt.event.ActionEvent evt) {
        if (txtCodFornecedor.getText().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Informe o código do fornecedor para buscar.");
            return;
        }
        try {
            int codFornecedor = Integer.parseInt(txtCodFornecedor.getText());
            FornecedorDAO dao = new FornecedorDAO();
            Fornecedor fornecedor = dao.consultarPorId(codFornecedor);

            if (fornecedor != null) {
                preencherCampos(fornecedor);
            } else {
                JOptionPane.showMessageDialog(this, "Fornecedor não encontrado.");
                limparCampos();
                txtCodFornecedor.setEditable(true);
            }
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Código do fornecedor inválido. Digite um número.");
            limparCampos();
        }
    }

    private void btnAtualizarActionPerformed(java.awt.event.ActionEvent evt) {
        if (txtCodFornecedor.getText().isEmpty()) {
            JOptionPane.showMessageDialog(this, "É necessário buscar um fornecedor antes de atualizar.");
            return;
        }
        
        try {
            Fornecedor fornecedor = new Fornecedor();
            fornecedor.setCod_fornecedor(Integer.parseInt(txtCodFornecedor.getText()));
            fornecedor.setNome(txtNome.getText());
            fornecedor.setNome_fantasia(txtNomeFantasia.getText());
            fornecedor.setCnpj(txtCnpj.getText());
            fornecedor.setEndereco(txtEndereco.getText());
            fornecedor.setEmail(txtEmail.getText());
            fornecedor.setTelefone(txtTelefone.getText());

            FornecedorDAO dao = new FornecedorDAO();
            dao.editarFornecedor(fornecedor);
            JOptionPane.showMessageDialog(this, "Fornecedor atualizado com sucesso!");
            limparCampos();
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Erro de formato nos dados. Verifique os campos.");
        } catch (Exception e) {
            JOptionPane.showMessageDialog(this, "Erro ao atualizar fornecedor: " + e.getMessage());
        }
    }

    private void btnLimparActionPerformed(java.awt.event.ActionEvent evt) {
        limparCampos();
        txtCodFornecedor.setEditable(true);
    }

